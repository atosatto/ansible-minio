{{ ansible_managed | comment }}

# Minio local/remote volumes.
{% if minio_server_cluster_nodes | length > 0 %}
MINIO_VOLUMES="{{ minio_server_cluster_nodes | join(' ') }}"
{% else %}
MINIO_VOLUMES="{{ minio_server_datadirs | join(' ') }}"
{% endif %}
# Minio cli options.
MINIO_OPTS="--address {{ minio_server_addr }} {{ minio_server_opts }}"

{% if minio_access_key %}
# Root user of the server because Access Key of the server has been deprecated.
MINIO_ROOT_USER="{{ minio_access_key }}"
{% endif %}
{% if minio_secret_key %}
# Root password of the server because Secret key of the server has been deprecated.
MINIO_ROOT_PASSWORD="{{ minio_secret_key }}"
{% endif %}

{{ minio_server_env_extra }}
